<% publish_to "/questions/#{@votable.id}/answers" do %>
var userID = parseInt(document.cookie.match( /user_id=(\d*)/ )[1]);
var IAmTheVoter = userID == <%= current_user.id %>;
if (IAmTheVoter) {
    $(".question-votes").html(
            '<p class="rating"> Rating: ' + <%= @votable.rating.to_s %> + '</p>' +
            '<table>' +
            '<tr>' +
            '<td class="like-button"> <%= render 'votes/form', votable:@votable, like:true %></td>' +
            '<td class="dislike-button"> <%= render 'votes/form', votable:@votable, like:false %></td>' +
            '</tr>' +
            '</table>'
    );
}
<% end %>