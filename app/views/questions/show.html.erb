<h1><%= @question.title %></h1>
<p><%= @question.body %></p>
<% if user_signed_in? && current_user.id == author_id_of(@question) %>
    <p><%= link_to 'Delete question', question_path(@question), method: :delete %></p>
    <p><%= link_to 'Edit question', edit_question_path(@question) %></p>
<% end %>
<hr>
<div id="answers">
  <% unless @question.answers.empty? %>
    <h2><%= @count %> answer(s):</h2>
    <% @question.answers.each do |answer| %>
      <div class="answer" id="answer-<%= answer.id %>">
        <p><%= answer.body %></p>
        <% if user_signed_in? && current_user.id == author_id_of(answer) %>
          <p><%= link_to 'Delete answer', answer_path(answer), method: :delete, remote: true %></p>
          <p><%= link_to 'Edit answer', edit_answer_path(answer) %></p>
        <% end %>
        <hr>
      </div>
    <% end %>
  <% end %>
</div>
<% if user_signed_in? %>
  <h3>Answer the question!</h3>
  <%= render 'answers/form' %>
<% end %>
