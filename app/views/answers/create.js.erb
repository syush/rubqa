
<% publish_to "/questions/#{@question.id}/answers" do %>
  var userID = parseInt(document.cookie.match( /user_id=(\d*)/ )[1]);
  var IAmAnswerAuthor = userID == <%= current_user.id %>;
  var IAmQuestionAuthor = userID == <%= @question.user_id %>
  $("#answers").append( '<%= j render @answer %>' );
  if (!IAmAnswerAuthor) {
    $("#answer-<%=@answer.id%> .links .change-group").remove();
  }
  if (!IAmQuestionAuthor) {
    $("#answer-<%=@answer.id%> .links .select-group").remove();
  }
  $("#count h2").html(
    "<%= @question.answers.count %> answer(s):"
  );
  $("#answer-<%=@answer.id%> .answer-form").hide();
<% end %>

